PORT=5000
NODE_ENV=development

# MongoDB (gratuit sur MongoDB Atlas)
MONGODB_URI=mongodb://localhost:27017/socialboost

# JWT
JWT_SECRET=changez_moi_en_production_minimum_32_caracteres
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=autre_secret_pour_refresh_token
