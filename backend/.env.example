LEMONSQUEEZY_API_KEY=eyJ...    # Settings → API → Créer une clé

LS_STORE_ID=12345              # Settings → Stores → votre Store ID (juste le numéro)

LS_VARIANT_STARTER=111111      # Products → Starter → Variants → l'ID du variant
